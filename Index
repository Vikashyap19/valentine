                </div>
                <div class="nose"></div>
            </div>
        </div>

        <div class="question">Priya, will you be my Valentine? üíï</div>

        <div class="initial-content" id="initialContent">
            <div class="buttons-container" id="buttonsContainer">
                <button class="btn btn-yes" id="yesBtn">Yes! üíñ</button>
                <button class="btn btn-no" id="noBtn">No üò¢</button>
            </div>

            <div class="message" id="message">Choose wisely... üòä‚ú®</div>
        </div>

        <div class="celebration" id="celebration">
            <div class="celebration-text">YAY! üéâ‚ú®üíï</div>
            <img src="https://media.giphy.com/media/g9582DNuQppxC/giphy.gif" alt="Celebration" class="celebration-gif">
            <div class="love-message">I love you forever and always! üíï</div>
            <div class="love-message" style="animation-delay: 0.5s;">You mean the world to me! üåç‚ú®</div>
            <div class="love-message" style="animation-delay: 1s;">Every moment with you is magical! ‚ú®üíñ</div>
            <div class="love-message" style="animation-delay: 1.5s;">You're my today and all of my tomorrows! üíïüåü</div>
            <div class="love-message" style="animation-delay: 2s;">I'm the luckiest person in the world! üçÄüíù</div>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const initialContent = document.getElementById('initialContent');
        const celebration = document.getElementById('celebration');
        const buttonsContainer = document.getElementById('buttonsContainer');
        const message = document.getElementById('message');
        const heartBg = document.getElementById('heartBg');

        let noAttempts = 0;
        const messages = [
            "Are you sure? ü•∫",
            "Please reconsider... üíî",
            "The Yes button is looking pretty good! üòä",
            "Come on, you know you want to! üíï",
            "Last chance before Yes gets HUGE! üòÑ"
        ];

        // Create floating hearts
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.innerHTML = 'üíï';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDelay = Math.random() * 2 + 's';
            heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
            heartBg.appendChild(heart);

            setTimeout(() => heart.remove(), 6000);
        }

        setInterval(createFloatingHeart, 300);

        // Create sparkles around bear
        function createSparkle() {
            const sparkle = document.createElement('div');
            sparkle.className = 'sparkle';
            sparkle.style.left = Math.random() * 100 + '%';
            sparkle.style.top = Math.random() * 100 + '%';
            document.querySelector('.bear').appendChild(sparkle);

            setTimeout(() => sparkle.remove(), 1500);
        }

        setInterval(createSparkle, 500);

        // Create confetti
        function createConfetti() {
            const colors = ['#ff1493', '#ff69b4', '#ffd700', '#87ceeb', '#98fb98'];
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.top = '-10px';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                    document.body.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 3000);
                }, i * 30);
            }
        }

        // Function to move No button away
        function moveNoButton() {
            noAttempts++;
            
            // Update message
            if (noAttempts <= messages.length) {
                message.textContent = messages[noAttempts - 1];
            } else {
                message.textContent = "Nice try! But you can only say YES! üòÑüíï";
            }
            
            // Get container dimensions
            const containerRect = buttonsContainer.getBoundingClientRect();
            
            // Generate random position within the container
            const randomX = (Math.random() - 0.5) * (containerRect.width - 200);
            const randomY = (Math.random() - 0.5) * (containerRect.height - 150);
            
            // Move the No button to random position
            noBtn.style.right = 'auto';
            noBtn.style.left = '50%';
            noBtn.style.transform = `translate(calc(-50% + ${randomX}px), calc(-50% + ${randomY}px))`;
        }

        // Track mouse movement to detect when cursor gets near No button
        document.addEventListener('mousemove', function(e) {
            if (!initialContent.classList.contains('hidden')) {
                const noRect = noBtn.getBoundingClientRect();
                const distance = 80; // Detection radius in pixels
                
                // Calculate distance from cursor to button center
                const buttonCenterX = noRect.left + noRect.width / 2;
                const buttonCenterY = noRect.top + noRect.height / 2;
                const distanceFromButton = Math.sqrt(
                    Math.pow(e.clientX - buttonCenterX, 2) + 
                    Math.pow(e.clientY - buttonCenterY, 2)
                );
                
                // If cursor is within detection radius, move the button
                if (distanceFromButton < distance) {
                    moveNoButton();
                }
            }
        });

        // Touch support for mobile devices
        document.addEventListener('touchmove', function(e) {
            if (!initialContent.classList.contains('hidden') && e.touches.length > 0) {
                const touch = e.touches[0];
                const noRect = noBtn.getBoundingClientRect();
                const distance = 100; // Slightly larger for touch
                
                const buttonCenterX = noRect.left + noRect.width / 2;
                const buttonCenterY = noRect.top + noRect.height / 2;
                const distanceFromButton = Math.sqrt(
                    Math.pow(touch.clientX - buttonCenterX, 2) + 
                    Math.pow(touch.clientY - buttonCenterY, 2)
                );
                
                if (distanceFromButton < distance) {
                    moveNoButton();
                }
            }
        });

        // When Yes button is clicked
        yesBtn.addEventListener('click', function() {
            initialContent.classList.add('hidden');
            celebration.classList.add('active');
            createConfetti();
        });

        // Prevent clicking No button - it moves away on mousedown too
        noBtn.addEventListener('mousedown', function(e) {
            e.preventDefault();
            moveNoButton();
        });

        // Also prevent any click on No button
        noBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            moveNoButton();
        });

        // Touch events for mobile
        noBtn.addEventListener('touchstart', function(e) {
            e.preventDefault();
            moveNoButton();
        });
    </script>
</body>
</html>
